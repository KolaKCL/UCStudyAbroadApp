<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="au.edu.canberra.ucstudyabroadapp.Welcome">

    <TextView
        android:id="@+id/textView"
        android:layout_width="329dp"
        android:layout_height="371dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:text="Thank you for downloading the UC Study Abroad App.! We are looking forward to welcoming you to UC and Australia. This app. will act as your pocket companion and hopefully answer any queries that you may have throughout your journey. Make sure you read through the information here carefully before contacting us!"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        tools:text="Thank you for downloading the UC Study Abroad App.! We are looking forward to welcoming you to UC and Australia. This app. will act as your pocket companion and hopefully answer any queries that you may have throughout your journey. Make sure you read through the information here carefully before contacting us!" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="323dp"
        android:layout_height="47dp"
        android:text="Have you submited your application?"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="109dp"
        android:layout_height="47dp"
        android:background="@mipmap/yes"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/noButton"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="109dp"
        android:layout_height="47dp"
        android:background="@mipmap/no"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.096" />
</android.support.constraint.ConstraintLayout>
